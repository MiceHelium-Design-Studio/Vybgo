# VYBGO Backend Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://vybgo_user:secure_password@db.example.com:5432/vybgo_prod?schema=public
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Direct database URL (for Prisma migrations)
# REQUIRED for Supabase - use direct connection (port 5432) for migrations
# Pooled connections (pgbouncer) block DDL operations like CREATE TABLE
# Format: postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public
# Example for Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres?schema=public
DIRECT_URL="postgresql://user:password@host:5432/database?schema=public"

# JWT Secret Key
# Generate a strong random string (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-change-this"

# Server Port
# Default: 3000
PORT=3000

