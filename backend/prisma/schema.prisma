generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env(DATABASE_URL)
}

enum VibeType {
  CHILL
  PARTY
  FOCUS
  ROMANTIC
}

enum RideStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rides     Ride[]
}

model Ride {
  id          String     @id @default(uuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  pickup      String
  dropoff     String
  vibe        VibeType
  status      RideStatus @default(PENDING)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}



